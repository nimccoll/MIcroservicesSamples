@{
    ViewData["Title"] = "Execute Calculations";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>User Details</h4>
    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        <div class="col-md-2">
            <input type="text" class="form-control" name="calc1Input1" id="calc1Input1" value="@ViewBag.Calc1Input1" />
        </div>
        <label for="calc1Input2" class="col-md-1 col-form-label">+</label>
        <div class="col-md-2">
            <input type="text" class="form-control" name="calc1Input2" id="calc1Input2" value="@ViewBag.Calc1Input2" />
        </div>
        <label for="calc1Result" class="col-md-1 col-form-label">=</label>
        <div class="col-md-2">
            <input type="text" class="form-control" name="calc1Result" id="calc1Result" value="@ViewBag.Calc1Result" />
        </div>
        <div class="col-md-4">
            <input type="submit" name="btnFirstCalculation" id="btnFirstCalculation" value="First Calculation" class="btn btn-secondary" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            <input type="text" class="form-control" name="calc2Input1" id="calc2Input1" value="@ViewBag.Calc2Input1" />
        </div>
        <label for="calc2Input2" class="col-md-1 col-form-label">*</label>
        <div class="col-md-2">
            <input type="text" class="form-control" name="calc2Input2" id="calc2Input2" value="@ViewBag.Calc2Input2" />
        </div>
        <label for="calc2Result" class="col-md-1 col-form-label">=</label>
        <div class="col-md-2">
            <input type="text" class="form-control" name="calc2Result" id="calc2Result" value="@ViewBag.Calc2Result" />
        </div>
        <div class="col-md-4">
            <input type="submit" name="btnSecondCalculation" id="btnSecondCalculation" value="Second Calculation" class="btn btn-secondary" />
        </div>
    </div>
}
